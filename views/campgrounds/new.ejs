<%include ../partials/header%>
<div class="text-center w-100">
		<h1>Submit a new Campground</h1>
</div>
<div class="form-narrow form-align">
	
	<form action="/campgrounds" method="POST">
		<div class="form-group">
			<input class="form-control" type="text" name="campground[name]" placeholder="name" required>	
		</div>
		<div class="form-group">
			<input class="form-control" type="text" name="campground[image]" placeholder="image url" required>	
		</div>
		<div class="form-group">
			<input class="form-control" type="number" name="campground[price]" placeholder="$0.00/night" required>	
		</div>
		<div class="form-group">
			<textarea class="form-control" name="campground[description]" required>
			</textarea>
		</div>
		<div class="form-group">
			<button class="btn btn-success btn-lg btn-block">Submit!</button>	
		</div>
		</form>
	<a href="/campgrounds">Go Back</a>
</div>

<%include ../partials/footer%>
