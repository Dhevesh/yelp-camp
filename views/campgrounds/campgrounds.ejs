<%include ../partials/header%>
	<div class="jumbotron">
		<div class="container">
			<h1>
				Welcome to Yelp Camp
			</h1>
			<p>
				View hand-picked campgrounds from all over the world
			</p>
			<% if (currentUser){ %>
				<p>
					<a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New Campground</a>
				</p>
			<% } %>
			
		</div>
	</div>
	<div class="container">
		<div class="row">
			<%campground.forEach((campground)=>{%>
				<div class="col-12 col-md-6">
					<div class="card h-100">
						<img class="card-img-top img-medium" src="<%=campground.image%>" alt="image.png">	
						<div class="card-body">
							<h5 class="card-title"><%=campground.name%></h5>
							<p class="card-text"><%=campground.description.substring(0,100)%>...</p>
							<a href="/campgrounds/<%=campground._id%>" class="btn btn-primary">More Info</a>
						</div>
					</div>
				</div>	
			<%})%>
		</div>
	</div>
	

<%include ../partials/footer%>