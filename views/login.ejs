<%include partials/header%>

<div class="d-flex flex-column justify-content-center">
    <div class="form-narrow form-align">
        <div class="form-title rounded">
            <div class="w-100">
                <h1>Log In</h1>
            </div> 
        </div>
        <div class="shadow p-3 mb-5 bg-white">
            <form action="/login" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="username" placeholder="username" autofocus required>    
                </div>
                <div class="form-group">
                    <input class="form-control" type="password" name="password" placeholder="password" required>
                </div>
                <button class="btn btn-block btn-lg btn-success">Login</button>
            </form>
            <div class="form-subtitle">
                <span>Don't have an account yet? </span><a href="/register">Sign Up</a>
            </div>
        </div>
    </div>
</div>

<%include partials/footer%>