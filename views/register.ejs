<%include partials/header%>

<div class="d-flex flex-column bd-highlight justify-content-center">
        <div class="form-narrow form-align">
            <div class="form-title rounded">
                <div class="w-100"><h1>Sign Up</h1></div>
            </div>
            <div class="shadow p-3 mb-5 bg-white">
                <form class="form" action="/register" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name="username" placeholder="username" autofocus required>    
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="password" name="password" placeholder="password" required>
                    </div>
                    <div class="form-group form-check">
                        <input class="form-check-input" type="checkbox" required>
                        <span>I have read the </span><a href="">terms and conditions</a>
                    </div>
                    <div class="">
                        <button class="btn btn-lg btn-block btn-success">Sign Up</button>
                    </div>
                    <div class="form-subtitle "> 
                        <span>Already have an account?</span>
                        <a href="/login">Login</a>
                    </div>
                </form>
            </div>
        </div>
        
</div>

<%include partials/footer%>