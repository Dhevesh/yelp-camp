<%include partials/header%>

<div class="d-flex flex-column bd-highlight justify-content-center">
    <div class="form-narrow form-align">
        <div class="form-title form-title-text">
            <span>Sign Up</span>
        </div>
        <div class="shadow p-3 mb-5 bg-white">
            <form class="form" action="/register" method="POST">
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text">First Name</span>
                    </div>
                    <input class="form-control" type="text" name="profile[fName]" placeholder="first name" autofocus required>
                </div>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text">Last Name</span>
                    </div>
                    <input class="form-control" type="text" name="profile[lName]" placeholder="last name" required>
                </div>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text">Alias</span>
                    </div>
                    <input class="form-control" type="text" name="profile[alias]" placeholder="will be shown as your user tag" required>
                </div>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text">Email</span>
                    </div>
                    <input class="form-control" type="email" name="username" placeholder="someone@example.com" required>    
                </div>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text">Password</span>
                    </div>
                    <input class="form-control" type="password" name="password" placeholder="min 6 chars" minLength="6" required>
                </div>
                
                <div class="form-group form-check">
                    <input class="form-check-input" type="checkbox" required>
                    <span>I have read the </span><a href="">terms and conditions</a>
                </div>
                <div class="">
                    <button class="btn btn-lg btn-block btn-success">Sign Up</button>
                </div>
                <div class="form-subtitle "> 
                    <span>Already have an account?</span>
                    <a href="/login">Login</a>
                </div>
            </form>
        </div>
    </div>
</div>

<%include partials/footer%>