<%include ../partials/header%>
<link rel="stylesheet" href="/stylesheets/rating.css">
<div class="form-wide form-align">
    <div class="form-title form-title-text">
        <span>Edit review</span>
    </div>
    <div class="shadow p-3 mt-2">
        <form action="/campgrounds/<%=campground_slug%>/reviews/<%=review._id%>?_method=put" method="POST">
            <div class="stars">
                <span class="star-rating star-5">
                    <input class="star" type="radio" name="review[rating]" value="1"><i></i>
                    <input class="star" type="radio" name="review[rating]" value="2"><i></i>
                    <input class="star" type="radio" name="review[rating]" value="3"><i></i>
                    <input class="star" type="radio" name="review[rating]" value="4"><i></i>
                    <input class="star" type="radio" name="review[rating]" value="5"><i></i>
                </span>
            </div>
            <div class="form-group">
                <textarea class="form-control" name="review[text]" id="" cols="30" rows="10" placeholder="Do not post a review if you work for the listed campground."></textarea>
            </div>
            <button class="btn btn-lg btn-success">Edit Review</button>
            <a class="btn btn-md btn-secondary" href="">Cancel</a>
        </form>
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function(){
        let stars = document.querySelectorAll(".star");
        let index = "<%=review.rating%>";
        stars[index-1].setAttribute("checked",true);
    });
</script>

<%include ../partials/footer%>