<% include ../partials/header%>

<div class="form-wide form-wide-long form-align">
    <div class="form-title form-title-text">
        <span>Update your profile details</span>
    </div>
    <form action="/user/<%=user._id%>/edit?_method=PUT" method="POST" class="form">
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text">First Name</span>
            </div>
            <input class="form-control" type="text" name="profile[fName]" value="<%=user.fName%>" placeholder="first name" required>
        </div>
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text">Last Name</span>
            </div>
            <input class="form-control" type="text" name="profile[lName]" value="<%=user.lName%>" placeholder="last name" required>
        </div>
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text">Alias</span>
            </div>
            <input class="form-control" type="text" name="profile[alias]" value="<%=user.alias%>" placeholder="will be shown as your user tag" required>
        </div>
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text">Date of Birth</span>
            </div>
            <input class="form-control" type="date" name="profile[dateOfBirth]">
        </div>
        <div class="input-group">
            <% var maleCheck, femaleCheck; if (currentUser.gender == "male") {maleCheck = "checked";} else if (currentUser.gender == "female") {femaleCheck = "checked";} else {maleCheck = ""; femaleCheck = "";} %>
            <div class="form-group px-1">
                <input class="" type="radio" name="profile[gender]" value="male" <%=maleCheck%>>
                <span>Male</span>
            </div>
            <div class="form-group px-1">
                <input class="" type="radio" name="profile[gender]" value="female" <%=femaleCheck%>>
                <span>Female</span>
            </div>
        </div>
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text">Profile Picture</span>
            </div>
            <input class="form-control" type="text" name="profile[profilePicUrl]" value="<%=user.profilePicUrl%>" placeholder="profile picture">
        </div>
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text">Cover Image</span>
            </div>
            <input class="form-control" type="text" name="profile[coverImageUrl]" value="<%=user.coverImageUrl%>" placeholder="cover image">
        </div>        
        <div class="form-group mb-3">
            <label for="profile[about]">About Me (Max 250 chars)</label>
            <textarea class="form-control" name="profile[about]" id="about" cols="30" rows="2" maxlength="250" placeholder="Max 250 chars"><%=user.about%></textarea>
        </div>
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text">Phone Number</span>
            </div>
            <input class="form-control" type="number" name="profile[phone]"  value="<%=user.phone%>" placeholder="phone number">
        </div>
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text">Country</span>
            </div>
            <input class="form-control" type="text" name="profile[country]" value="<%=user.country%>" placeholder="country">
        </div>
        <div class="form-group mb-3">
            <label for="interests">My Interests (Max 250 chars)</label>
            <textarea class="form-control" name="profile[interests]" id="interests" cols="30" rows="2" maxlength="250" placeholder="interest1, interest2..."><%=user.interests%></textarea>
        </div>
        <div class="input-group mb-3">
            <button class="btn btn-block btn-success">Update Profile</button>
        </div>
        <div><a href="/user/<%=user._id%>">Go Back</a></div>
        
    </form>
</div>

<% include ../partials/footer%>